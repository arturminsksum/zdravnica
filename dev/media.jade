    //- section.media-3d
      .container
        .section__title 3D Тур
        .media-3d__wrap
          iframe(src='http://www.agrozdrav.by/files/virtual/radon/Ulica.html', name='tour', width='100%', height='600', frameborder='0')




    +feedback()
  +footer('int')