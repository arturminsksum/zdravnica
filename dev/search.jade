extends template
block content

  +header("resort","no")

  main
    .container
      +breadcrumb('Результат поиска')
      h1.page__title По заданным параметрам найдены <span class="page__title_green">2</span> предложения:

    section.search-param
      .container
        .search-param__wrap
          - for (var i = 0; i < 2; i++) 
            .search-param__block
              .search-param__list
                .item
                  .item__name Дата заезда
                  .item__value.item__value_date 25.06.2016 - 28.06.2016
                .item
                  .item__name Взрослые
                  .item__value 3 человекa                
                .item
                  .item__name Дети
                  .item__value 1 ребёнок
              .search-param__change
                .btn.btn_grey Изменить поиск

          .search-param__resort
            .item
              .item__name Радон
              .item__delete
            .item
              .item__name Случ
              .item__delete

    section.search-result
      .container
        .search-result__wrap
          .search-result__title Санаторий “Радон”
          .row
            - var hotList = ['4 местный тип А','1 местный повышенной комфортности','2 местный тип А']
            each hot in hotList
              .column
                .tour
                  .tour__img
                    img(src="images/tour-01.jpg", alt="")
                  .tour__top
                    .tour__type=hot
                    .tour__sanatorium Санаторий "Радон"
                  a(href="#similar").tour__more
                    span Еще варианты  
                  .tour__bottom
                    .tour__list
                      ul
                        -var listIcons = ['Болезни системы кровообращения', 'Болезни костно-мышечной системы и соединительной ткани', 'Болезни органов пищеварения', 'Болезни органов дыхания', 'Болезни нервной системы']
                        each icon in listIcons
                          li=icon

                    .tour__icons
                        i.icon.icon_wi-fi
                        i.icon.icon_air
                        i.icon.icon_double-bed
                        i.icon.icon_single-bed
                        i.icon.icon_safety
                        i.icon.icon_tv
                        i.icon.icon_phone
                        i.icon.icon_more                    
                    .tour__info
                      .tour__info-icon
                      +tooltip('210 руб. за 5 ночей + 3% курортный сбор 20.000')

                      .tour__info-price 210 руб. за 5 ночей
                      .tour__info-tax + 3% курортный сбор 20.000
                    .tour__people
                      span 3 взрослых + 1 ребёнок


    section.search-result
      .container
        .search-result__wrap
          .search-result__title Санаторий “Случ”
          .row
            - var hotList = ['4 местный тип А','1 местный повышенной комфортности','2 местный тип А']
            each hot in hotList
              .column
                .tour
                  .tour__img
                    img(src="images/tour-01.jpg", alt="")
                  .tour__top
                    .tour__type=hot
                    .tour__sanatorium Санаторий "Случ"
                  a(href="#similar").tour__more
                    span Еще варианты                      
                  .tour__bottom
                    .tour__list
                      ul
                        -var listIcons = ['Болезни системы кровообращения', 'Болезни костно-мышечной системы и соединительной ткани', 'Болезни органов пищеварения', 'Болезни органов дыхания', 'Болезни нервной системы']
                        each icon in listIcons
                          li=icon

                    .tour__icons
                        i.icon.icon_wi-fi
                        i.icon.icon_air
                        i.icon.icon_double-bed
                        i.icon.icon_single-bed
                        i.icon.icon_safety
                        i.icon.icon_tv
                        i.icon.icon_phone
                        i.icon.icon_more                    
                    .tour__info
                      .tour__info-icon
                      +tooltip('210 руб. за 5 ночей + 3% курортный сбор 20.000')

                      .tour__info-price 210 руб. за 5 ночей
                      .tour__info-tax + 3% курортный сбор 20.000
                    .tour__people
                      span 3 взрослых + 1 ребёнок

    section.feedback
      .container
        .feedback__wrap
            .feedback__text
              span Вы можете связаться с нашими менеджером для подбора 
              br
              span индивидуального предложения
            .feedback__btn
              a(href="#order").btn.btn_invert.js-order Отправить заявку

  +footer('int')


  #similar.popup.popup_similar
    .container
      .popup_similar__title Похожие номера:
      .popup_similar__close
        span Закрыть
      .popup_similar__wrap
        .row
          - var hotList = ['4 местный тип А','1 местный повышенной комфортности','2 местный тип А']
          each hot in hotList
            .column
              .tour
                .tour__img
                  img(src="images/tour-01.jpg", alt="")
                .tour__top
                  .tour__type=hot
                  .tour__sanatorium Санаторий "Радон"                   
                .tour__bottom
                  .tour__list
                    ul
                      -var listIcons = ['Болезни системы кровообращения', 'Болезни костно-мышечной системы и соединительной ткани', 'Болезни органов пищеварения', 'Болезни органов дыхания', 'Болезни нервной системы']
                      each icon in listIcons
                        li=icon

                  .tour__icons
                      i.icon.icon_wi-fi
                      i.icon.icon_air
                      i.icon.icon_double-bed
                      i.icon.icon_single-bed
                      i.icon.icon_safety
                      i.icon.icon_tv
                      i.icon.icon_phone
                      i.icon.icon_more                    
                  .tour__info
                    .tour__info-icon
                    +tooltip('210 руб. за 5 ночей + 3% курортный сбор 20.000')

                    .tour__info-price 210 руб. за 5 ночей
                    .tour__info-tax + 3% курортный сбор 20.000
                  .tour__people
                    span 3 взрослых + 1 ребёнок    
      .popup_similar__more
        a(href="").btn.btn_grey
          span Ещё похожие номера

  #order.popup.popup_order
    .popup__title Отправить заявку
    .popup__close
    .popup__form     
      form(action="").form          
        .b-filter__row
          .b-filter__block
            label.label(for="filterResort") Выберите санаторий
            select#filterResort.select(name='PROPERTY[][]')
              option(selected) Все
              - var listMenu = ['Родон', 'Поречье','Сосновый бор','Рассвет-Любань','Случь','Солнышко','Росинка','Налибокская пуща']
              each item in listMenu
                option=item
          .b-filter__block
            label.label(for="filterDate") Дата заезда*   
            input.req.input.input_date#filterDate(type='text', name='PROPERTY[][]', placeholder='')
          .b-filter__block
            label.label(for="filterDays") Количество дней*   
            input.req.input#filterDays(type='number', name='PROPERTY[][]', placeholder='', min='1', max='365', maxlength='3', autocomplete="false")
        .b-filter__row
          .b-filter__block
            label.label(for="filterComfort") Степень комфортности
            select#filterComfort.select(name='PROPERTY[][]')
              option(selected) люкс
              - var listMenu = ['полу-люкс','обычный']
              each item in listMenu
                option=item              
          .b-filter__block
            label.label(for="filterPlaces") Размещение в номере*
            select.req#filterPlaces.select(name='PROPERTY[][]')
              option(selected) 1
              - var listMenu = [2,3,4]
              each item in listMenu
                option=item
            label.checkbox  
              input(type="checkbox").checkbox__hidden
              span.checkbox__showed
              span.checkbox__title Только одноместные номера                   

          .b-filter__block
            label.label(for="filterChild") Количество детей
            select#filterChild.select.select_child(name='PROPERTY[][]')
              option(selected) нет
              - var listMenu = [1,2,3,4]
              each item in listMenu
                option=item  
        .popup_order__title Ваши контактные данные
        .b-filter__row
          .b-filter__block
            label.label(for="filterName") Имя
            input#filterName.input(type='text', name='form[]', placeholder='Василий',autocomplete='name')
          .b-filter__block
            label.label(for="filterPhone") Телефон
            input#filterPhone.input.req(type='text', name='form[]', placeholder='+375295750215',autocomplete='tel')                      
          .b-filter__block
            label.label(for="filterEmail") E-mail
            input#filterEmail.input.req.email(type='email', name='form[]', placeholder='romateo@list.ru',autocomplete='email')
        .b-filter__hr
        .popup_order__btn
          input.btn.btn_green(type='submit', value="Отправить")