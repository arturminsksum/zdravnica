extends template
block content

  +header("resort","no")

  main
    .banner.banner_int
      .banner__img(style="background-image: url(images/resort-banner.jpg)")
      .banner__title Случь
      .banner__filter 
        span Подобрать путевку

    .container
      +breadcrumb('Горящие туры')
      h1.page__title Горящие туры

    +filter('internal')
    
    section.navigation
      .container
          .overlay.navigation__overlay
          .navigation__btn Горящие туры
          ul.navigation__menu
            li.navigation__item
              a(href="").navigation__link Медицинский <br>профиль
            li.navigation__item
              a(href="").navigation__link Номера и <br>цены
            li.navigation__item
              a(href="").navigation__link Досуг
            li.navigation__item
              a(href="").navigation__link Медиа
            li.navigation__item
              a(href="").navigation__link Инфрастуктура
            li.navigation__item
              a(href="").navigation__link Контакты
            li.navigation__item.navigation__item_hot.active
              .navigation__link Горящие <br>туры
            li.navigation__item
              a(href="").navigation__link Диетическое <br>питание

    section.hot-list
      .container
        .basket-list__wrap

          - for (var j = 0; j < 3; j++)
            .tour.tour_hot.clearfix
              .tour__hot
              .tour__btn
                a(href="#book").btn.btn_green.js-book Забронировать
              .tour__left
                img(src="images/basket-img-01.jpg", alt="")
              .tour__right 
                .tour__type 4 местный тип А
                .tour__sanatorium Санаторий "Радон"
                .tour__block     
                  .tour__price
                    a.tour__info-icon.fancybox(href="#tooltip")
                    +tooltip('210 руб. за 5 ночей + 3% курортный сбор 20.000')                
                    .tour__info-price 210 руб. за 5 ночей
                    .tour__info-tax + 3% курортный сбор 20.000
                  .tour__action
                    .tour__icons
                      i.icon.icon_wi-fi
                      i.icon.icon_air
                      i.icon.icon_double-bed
                      i.icon.icon_single-bed
                      i.icon.icon_safety
                      i.icon.icon_tv
                      i.icon.icon_phone
                      i.icon.icon_more
                    .tour__dropdown
                      - for (var i = 0; i < 3; i++)
                        i.icon.icon_wi-fi
                        i.icon.icon_air
                        i.icon.icon_double-bed
                        i.icon.icon_single-bed
                        i.icon.icon_safety
                        i.icon.icon_tv
                        i.icon.icon_phone

                .tour__list
                  ul
                    -var listIcons = ['Болезни системы кровообращения', 'Болезни костно-мышечной системы и соединительной ткани', 'Болезни органов пищеварения', 'Болезни органов дыхания', 'Болезни нервной системы']
                    each icon in listIcons
                      li=icon   

        nav.pagination-wrap
          ul.pagination
            li.page-item
              a.page-link(href='#') 1
            li.page-item.active
              a.page-link(href='#') 2
            li.page-item
              a.page-link(href='#') 3
            li.page-item
              a.page-link(href='#') 4
            li.page-item
              a.page-link(href='#') 5
              
    +feedback()
  +footer('int')
  +popup_tooltip()  