    section.gallery
      .container
        .gallery__title ПОхожие номера:
        .gallery__row
          - for (var i = 1; i < 5; i+=2)
            .gallery__col
              a(href="").gallery__item
                .gallery__img
                  img(src="images/gallery-0"+i+".jpg", alt="")
                .gallery__type 4 местный тип А 
                .gallery__price 40 руб. за сутки
            .gallery__col
              a(href="").gallery__item
                .gallery__img
                  img(src="images/gallery-0"+(i+1)+".jpg", alt="")
                .gallery__type Номер Люкс
                .gallery__price 30 руб. за сутки  


    +feedback()
  +footer('int')